---
import Icon from "../../ui/Icon.astro";

const { products = [] } = Astro.props;
---

<section class="relative overflow-hidden bg-brand-blue py-20 text-white">
  <!-- Background texture -->
<div class="absolute inset-0 bg-[url('/textures/cubes.png')] opacity-10"></div>



  <div class="relative z-10 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">

    <!-- Header -->
    <header class="mb-14 text-center max-w-3xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-extrabold text-brand-yellow">
        Nuestros Productos Financieros
      </h2>
      <p class="mt-3 text-blue-100 text-lg">
        Explora nuestras soluciones diseñadas para ayudarte a alcanzar
        tus metas económicas.
      </p>
    </header>

<!-- Products grid -->
<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
  {products.map((product) => (
    <article
      class="group relative flex flex-col items-center text-center
             rounded-2xl border border-white/15
             bg-white/10 p-8 backdrop-blur-md
             transition-all duration-300
             hover:bg-white/20 hover:-translate-y-1
             hover:shadow-xl hover:shadow-black/25"
    >
      <div
        class="pointer-events-none absolute inset-0 rounded-2xl
               bg-gradient-to-br from-brand-yellow/10 via-transparent to-transparent
               opacity-0 transition-opacity duration-300
               group-hover:opacity-100"
      ></div>

      <div
        class="relative mb-6 flex h-14 w-14 items-center justify-center
               rounded-2xl bg-brand-yellow/20 text-brand-yellow
               transition-transform duration-300
               group-hover:scale-110"
      >
        <Icon
          name={product.icon ?? "building-library"}
          class="h-7 w-7"
        />
      </div>

      <h3 class="mb-3 text-xl font-bold text-white">
        {product.name}
      </h3>


      <span class="mb-4 h-1 w-8 rounded-full bg-brand-yellow"></span>


      <p class="text-sm leading-relaxed text-blue-100 max-w-xs">
        {product.description}
      </p>
    </article>
  ))}
</div>

</section>
