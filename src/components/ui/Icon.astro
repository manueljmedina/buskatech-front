---
const { name, class: className = "h-6 w-6" } = Astro.props;

const icons = {
    shield: `
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
      d="M12 3l7 4v5c0 5-3.5 9-7 11-3.5-2-7-6-7-11V7l7-4z" />
  `,

    clock: `
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
      d="M12 6v6l4 2" />
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
      d="M12 3a9 9 0 100 18 9 9 0 000-18z" />
  `,

    eye: `
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
      d="M2.458 12C3.732 7.943 7.523 5 12 5
         c4.477 0 8.268 2.943 9.542 7
         -1.274 4.057-5.065 7-9.542 7
         -4.477 0-8.268-2.943-9.542-7z" />
    <circle cx="12" cy="12" r="3" />
  `,

    star: `
    <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M11.5 3l2.6 5.3 5.9.8-4.3 4.2 1 5.9-5.2-2.8-5.2 2.8 1-5.9-4.3-4.2 5.9-.8L11.5 3z"
                />
  `,

    "currency-dollar": `

  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />


  `,

    "building-library": `
     <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M3 9l9-5 9 5v2H3V9z"
                />
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M5 11v7M9 11v7M15 11v7M19 11v7"
                />
  `,
    fast: `   <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M13 2L3 14h7l-1 8 10-12h-7l1-8z"
                />`,
    secure: ` <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M12 3l7 4v5c0 5-3.5 9-7 11-3.5-2-7-6-7-11V7l7-4z"
                />`,
    "light-bulb":`
  <path stroke-linecap="round" stroke-linejoin="round" d="M12 18v-5.25m0 0a6.01 6.01 0 0 0 1.5-.189m-1.5.189a6.01 6.01 0 0 1-1.5-.189m3.75 7.478a12.06 12.06 0 0 1-4.5 0m3.75 2.383a14.406 14.406 0 0 1-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 1 0-7.517 0c.85.493 1.509 1.333 1.509 2.316V18" />

`
};
---

<span class={`inline-flex ${className}`} aria-hidden="true">
    {
        icons[name] ? (
            <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                set:html={icons[name]}
            />
        ) : null
    }
</span>
